@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">Movie List</h1>
                @*<p class="govuk-body"></p>*@


                @*<h1>Index</h1>*@

                <h5>
                    <a asp-action="Create">Create New</a>
                </h5>

                <form asp-controller="Movies" asp-action="Index" method="get">
                    <p>

                        @*<select class="govuk-select" id="sort" name="sort">
                                <option value="published">Recently published</option>
                                <option value="updated" selected>Recently updated</option>
                                <option value="views">Most views</option>
                                <option value="comments">Most comments</option>
                            </select>*@

                        <select class="govuk-select" id="sort" name="sort" asp-for="MovieGenre" asp-items="Model.Genres">
                            <option value="">All</option>
                        </select>

                        Title: <input class="govuk-input govuk-!-width-one-quarter" type="text" asp-for="SearchString" />
                        <input class="govuk-input govuk-!-width-one-quarter" type="submit" value="Filter" />
                    </p>
                </form>
            </div>
        </div>
    </main>

    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header app-custom-class">
                    @Html.DisplayNameFor(model => model.Movies[0].Title)
                </th>
                <th scope="col" class="govuk-table__header app-custom-class">
                    @Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)
                </th>
                <th scope="col" class="govuk-table__header app-custom-class">
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th scope="col" class="govuk-table__header app-custom-class">
                    @Html.DisplayNameFor(model => model.Movies[0].Price)
                </th>
                <th scope="col" class="govuk-table__header app-custom-class">
                    @Html.DisplayNameFor(model => model.Movies[0].Rating)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            @foreach (var item in Model.Movies)
            {
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="govuk-table__cell">
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td class="govuk-table__cell">
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td class="govuk-table__cell">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="govuk-table__cell">
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td class="govuk-table__cell">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
